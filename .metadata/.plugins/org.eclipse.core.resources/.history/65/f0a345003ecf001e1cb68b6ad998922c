function addNextDetailSection(){
	allDivDetails = $("[id^='divDetails']"); 
	divDetailCount = allDivDetails.length;
	htmlDetailSection=`
		<div class="form-inline" id="divDetails${divDetailCount}">
			<label class="m-3">Name: </label>
			<input type="text" class="form-control w-25" name="detailNames" maxlength="255"/>
			<label class="m-3">Value: </label>
			<input type="text" class="form-control w-25" name="detailValues" maxlength="255"/>
		</div>
	`;
	$("#divProductDetails").append(htmlDetailSection);
	previousDivDatailSection = allDivDetails.last();
	previousDivDatailId = previousDivDatailSection.attr("id");	
	htmlLinkRemove = `
		<a class="btn fas fa-times-circle fa-2x icon-dark"
			href="javascript:removeDetailSectionbyId(${divDetailCount-1})"			
			title="Remove this detail"></a>
	`;
	
	previousDivDatailSection.append(htmlLinkRemove);
}

function removeDetailSectionbyId(index){
	$("#divDetails"+index).remove(); 
}